{
  "name": "create-arkos",
  "version": "1.3.6-beta",
  "type": "module",
  "description": "CLI for creating Arkos.js projects, see docs at www.arkosjs.com",
  "bin": {
    "create-arkos": "./dist/index.js"
  },
  "scripts": {
    "test": "vitest --coverage",
    "build": "rimraf dist && tsc",
    "dev": "ts-node src/index.ts",
    "postbuia": "ts-node scripts/postbuild/index.ts",
    "postbuild": "npx tsx scripts/postbuild/fix-esm-imports.ts",
    "postpublisa": "ts-node scripts/postpublish/index.ts",
    "test:hbs": "ts-node src/utils/helpers/hbs-tester.helpers.ts",
    "prepublishOnly": "pnpm build",
    "publishasa": "ts-node scripts/postbuild/index.ts && pnpm build && npm publish --tag latest"
  },
  "author": "Uanela Como",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/uanela/arkos.git"
  },
  "bugs": {
    "url": "https://github.com/uanela/arkos/issues"
  },
  "homepage": "https://www.arkosjs.com/docs/cli/create-arkos",
  "files": ["dist", "templates", "cli.js", "README.md"],
  "devDependencies": {
    "@types/inquirer": "^8.1.0",
    "@types/node": "^16.18.126",
    "@vitest/coverage-v8": "3.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@inquirer/prompts": "^7.6.0",
    "chalk": "^5.4.1",
    "handlebars": "^4.7.8",
    "inquirer": "^8.2.6"
  }
}
