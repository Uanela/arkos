{
  "compilerOptions": {
    "target": "ES6",
    "module": "Node16",
    "moduleResolution": "node16",
    "rootDir": "./src",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["src/**/*.js", "src/**/*.jsx"],
  "exclude": ["node_modules", ".build", "src/**/__tests__/**", "src/**/*.test.js"]
}
