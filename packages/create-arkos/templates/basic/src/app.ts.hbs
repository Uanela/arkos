import arkos from 'arkos';

arkos.init({
  cors: {
    allowedOrigins: process.env.NODE_ENV !== "production" ? "*" : "your-production-url"
  },
  {{#if authentication.type}}
  authentication: {
    mode: '{{authentication.type}}',
    login: {
      allowedUsernames: ['{{authentication.usernameField}}'],
    }
  },
  {{/if}}
  routers: {
  {{#if routing.strict}}
    strict: true
  {{else}}
    strict: "no-bulk"
  {{/if}}
  },
  {{#if validation.type}}
  validation: {
    resolver: '{{validation.type}}'
  },
  {{/if}}
  swagger: {
    {{#if validation.type}}
    mode: '{{validation.type}}', 
    {{else}}
    mode: 'prisma', 
    {{/if}}
    strict: false,
  }
});
