{
  "compilerOptions": {
    "target": "ES6",
    "module": "Node16",
    "moduleResolution": "node16",
    "rootDir": ".",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["src/**/*.js", "src/**/*.jsx", "arkos.config.js"],
  "exclude": ["node_modules", ".build", "src/**/__tests__/**", "src/**/*.test.js"]
}
