import arkos from 'arkos';

arkos.init({
  port: 8000,
  {{#if authentication.type}}
  authentication: {
    mode: '{{authentication.type}}',
    usernameField: '{{authentication.usernameField}}'
  },
  {{/if}}
  {{#if validation.type}}
  validation: {
    resolver: '{{validation.type}}'
  },
  {{/if}}
});
