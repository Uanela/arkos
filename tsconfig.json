{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./dist",
    "paths": {
      "arkos": ["node_modules/arkos"],
      "arkos/*": ["node_modules/arkos/dist/esm/exports/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
